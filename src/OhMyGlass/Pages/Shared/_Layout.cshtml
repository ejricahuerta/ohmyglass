<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Oh! My Glass | @ViewBag.Title</title>
    <link rel="icon" type="image/png" href="favicon-32x32.png" sizes="32x32" />
    <link rel="icon" type="image/png" href="favicon-16x16.png" sizes="16x16" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Abel&display=swap" rel="stylesheet">
    <link href="https://unpkg.com/aos@@2.3.1/dist/aos.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.1/css/all.min.css" integrity="sha512-xA6Hp6oezhjd6LiLZynuukm80f8BoZ3OpcEYaqKoCV3HKQDrYjDE1Gu8ocxgxoXmwmSzM4iqPvCsOkQNiu41GA==" crossorigin="anonymous" />
    <link rel="stylesheet" href="~/css/BeerSlider.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="loading min-vh-100 w-100 bg-white d-flex justify-content-center align-items-center position-fixed" style="z-index: 1089;">
        <img src="@Url.Content("~/img/loading.gif")" height="50" width="50" alt="loading">
    </div>
    <nav class="navbar navbar-expand-md navbar-light bg-light sticky-top">
        <a class="navbar-brand" asp-area="" asp-page="/Index"><img src="@Url.Content("~/img/logo.png")" class="img-logo" alt="~/img/logo.png"></a>
        <button class="navbar-toggler" type="button" data-toggle="modal" data-target="#menuModal" aria-controls="main_nav_collapse_content" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="main_nav_collapse">
            <ul class="navbar-nav mr-auto text-center">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Content("~/")">
                        <h5 class="mb-0">
                            Home
                        </h5>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Content("~/Services")">
                        <h5 class="mb-0">
                            Services
                        </h5>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Content("~/Showcase")">
                        <h5 class="mb-0">
                            Our Work
                        </h5>
                    </a>
                </li>
            </ul>
            <div class="my-2 my-lg-0 text-center text-white">
                <a class="btn btn-link text-dark" href="tel:000-000-0000">
                    <h5 class="mb-0">
                        000-000-9999
                    </h5>
                </a>
            </div>
        </div>
    </nav>
    <div class="h-100">
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <footer class="bg-dark text-white">
        <div class="container py-5">
            <div class="row">
                <div class="col-12">
                    <p class="text-center text-muted">
                        Oh! My Glass &copy; @(DateTime.Now.Year) | All Rights Reserved
                        <br>
                        Created with <i class="text-white fas fa-heart" title="love"></i> by <a target="_blank" href="https://www.linkedin.com/in/exd-exricahuerta/">EXD</a>
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <div class="modal fade pr-0" id="menuModal" tabindex="-1" role="dialog" aria-labelledby="menuModalLabel" aria-hidden="true">
        <div class="modal-dialog  modal-dialog-full-width bg-black">
            <div class="modal-content modal-content-full-width">
                <div class="modal-header border-0 text-white">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body border-0 h-100">
                    <ul class="navbar-nav mr-auto text-center">
                        <li class="nav-item py-3">
                            <a class="nav-link" href="@Url.Content("~/")">
                                <h3 class="mb-0">
                                    Home
                                </h3>
                            </a>
                        </li>
                        <li class="nav-item py-3">
                            <a class="nav-link" href="@Url.Content("~/Services")">
                                <h3 class="mb-0">
                                    Services
                                </h3>
                            </a>
                        </li>
                        <li class="nav-item py-3">
                            <a class="nav-link" href="@Url.Content("~/Showcase")">
                                <h3 class="mb-0">
                                    Our Work
                                </h3>
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="modal-footer text-center">
                    <h4 class="text-center w-100">
                        Call Now: <a href="te:000-000-0000">000-000-0000</a>
                    </h4>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/beerslider/dist/BeerSlider.js"></script>
    <script src="https://unpkg.com/aos@@2.3.1/dist/aos.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
