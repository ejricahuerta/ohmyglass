@page
@model ServicesModel
@{
    ViewBag.Title = "Our Work";
}
<section class="container">
  <h1 class="my-5 text-center w-100">Before and After</h1>
    <div class="card-columns min-vh-100 p-0 mb-5">
    @for (int i = 1; i <= 6; i++)
    {
            <div class="card p-0 mb-3 rounded-0 border-0">
                <div id="beer-slider" class="beer-slider w-100" data-beer-label="after" data-beer-start="25">
                    <img src="@Url.Content($"~/img/showcase/after_img{i}.jpg")" alt="Image Not Found">
                    <div class="beer-reveal h-100" data-beer-label="before">
                        <img src="@Url.Content($"~/img/showcase/before_img{i}.jpg")" alt="Image Not Found">
                    </div>
                </div>
            </div>
        }
    </div>
    <p class="mb-5">Did we forget your <strong>Before and After</strong>? Let us know.</p>
</section>


